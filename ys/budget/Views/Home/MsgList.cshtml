</body>
</html>


<script type="text/javascript" language="javascript">
    $(document).ready(function () {
        $("#butCx").click(function () {
            var lx = $("#cx_lx").val();
            if (lx == "" || undefined || null) {
                lx = "";
            }

            $.ajax({
                type: 'POST',
                url: "/Home/MsgListCx",
                data: {
                    t1: $("#txt1").val(),
                    t2: $("#txt2").val(),
                    t3: $("#txt3").val(),
                    t4: $("#txt4").val(),
                    t5: $("#txt5").val()
                },
                dataType: "json",
                success: function (sesponseTest) {
                    var s = "../Home/MsgList?p=1&r=0";
                    window.location = s;

                }
            });
        });
    });

    function guanbi() {
        window.location.href = "/Home/Index";
    }

    function shuaxin() {
        var s = "../Home/MsgList?p=1&r=1";
        window.location = s;
    }

    function rollto(intstep) {
        var a1 = "1";
        var a2 = "1";
        var a = "1";
        a1 = $("#dqy").val();
        a2 = $("#zys").val();
        a = $("#txtdangqianye").val();
        if (a1 == "" || undefined || null) {
            a1 = '1';
        }
        if (a2 == "" || undefined || null) {
            a2 = '1';
        }
        if (a == "" || undefined || null) {
            a = '1';
        }
        a = parseInt(a) + parseInt(intstep);

        var lx = $("#cx_lx").val();
        if (lx == "" || undefined || null) {
            lx = "";
        }

        $("#txtdangqianye").val(a);

        var s = "../Home/MsgList?p=" + a + "&r=0";
        window.location = s;

    }


</script>


<script type="text/javascript">

    function Export2Excel() {
        var q = $("#wheresql").val();
        if (q == "" || undefined || null) {
            q = " where 1=2";
        }
        q = 'select * from A消息 ' + q;
        q = escape(q);
        var s = "../Main/Export2Excel?w=" + q;
        window.location = s;
    }


    document.getElementById("worktable").style.height = document.body.clientHeight + "px";
</script>



