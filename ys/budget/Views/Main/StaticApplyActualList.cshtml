            if (strlx == '1') cp = '项目';
            $("#lblXqbt").val(' ' + cp + '预算浏览');
            popupDiv('popXQ', strid);
        });
    }



    //contetn为要显示的内容  
    //height为离窗口顶部的距离  
    //time为多少秒后关闭的时间，单位为秒  
    function showTips( content, height, time, jiajian ){  
        //窗口的宽度  
        var windowWidth  = $(window).width();  
        var tipsDiv = '<div class="tipsClass">' + '<br>' + content + '</div>';

        var color = '#8FBC8F';
        if (jiajian != 1)
        {
            color = '#f5a10a';
        }

        var top = document.documentElement.scrollTop + (document.documentElement.clientHeight - 70) / 2;

        $( 'body' ).append( tipsDiv );  
        $( 'div.tipsClass' ).css({  
            'top'       : top + 'px',    //height + 'px',  
            'left'      : ( windowWidth / 2 ) - 350/2 + 'px',  
            'position'  : 'absolute',  
            'padding'   : '3px 5px',  
            'background': color,   //'#8FBC8F',  
            'font-size' : 14 + 'px',  
            'margin'    : '0 auto',  
            'text-align': 'center',            
            'width'     : '350px',  
            'height'    : '70px',   //'auto',  
            'color'     : '#fff',  
            'opacity'   : '0.8'  
        }).show();  
        setTimeout( function(){$( 'div.tipsClass' ).fadeOut();}, ( time * 1000 ) );  
    }  


    function pichuliadd(strid, strysbh) {
        
        if (strid == "" || undefined || null) {
            return;
        }
        if (strysbh == "" || undefined || null) {
            return;
        }

        var c = cb_cookie.get("sjszpcl");   //获取cookie
        if (c == null)
        {
            c = '';
        }
        if (c == "" || undefined || null) {            
            c = '';
        }
        c = c.replace('undefined', '').trim();

        var msg = strysbh;
        var jiajian = 1;
        if (c.indexOf(strid) == -1)
        {
            msg = msg + '已经加入到批处理。';
            c = c + " " + strid;
            jiajian = 1;
        }
        else
        {
            msg = '已经从批处理中移除' + msg;
            c = c.replace(strid, '');
            jiajian = 0;
        }

        c = c.trim();
        while (c.indexOf('  ') != -1)   //清除连续的空格
        {
            c = c.replace('  ', ' ');
        }
        c = c.trim();
        cb_cookie.set("sjszpcl", c, 1);   //设置为1天过期
        showTips(msg, 500, 1, jiajian);

        var strx = "";
        if (c == '') {
            strx = "批处理";
        }
        else {
            var arr = c.split(" ");
            strx = "批处理" + arr.length;
        }
        var r = document.getElementById("butpcl");
        r.innerText = strx;

        var z = document.getElementById("pi_" + strid);
        if(jiajian == 1)
        {
            z.innerText = "批-";
        }
        else
        {
            z.innerText = "批+";
        }
    }


    function pichuli() {
        var c = cb_cookie.get("sjszpcl");   //获取cookie
        if (c == null) {
            c = '';
        }
        if (c == "" || undefined || null) {
            c = '';
        }
        c = c.replace('undefined', '').trim();
        if (c == "") return false;

        $.ajax({
            type: 'POST',
            url: "/Main/piliangchuli",
            data: {
                ids: c
            },
            dataType: "json",
            success: function (sesponseTest) {
                switch (sesponseTest) {
                    case 400001:
                        alert("加入批处理失败：未知的记录。");
                        return false;
                    default:
                        window.open("/Main/BatchActual");
                        return true;
                }
            }
        });
    }


    //因为换页，批处理数量重新获取
    var refresh = "";
    refresh = $("#txtpichulicookie").val();
    if (refresh == 0)
    {
        var c1 = cb_cookie.get("sjszpcl");   //获取cookie
        if (c1 == null) {
            c1 = '';
        }
        if (c1 == "" || undefined || null) {
            c1 = '';
        }
        c1 = c1.replace('undefined', '').trim();
        if (c1 != "")
        {
            while (c1.indexOf('  ') != -1)   //清除连续的空格
            {
                c1 = c1.replace('  ', ' ');
            }
            c1 = c1.trim();
        }
        if (c1 != "") {
            var arr = c1.split(" ");
            var strx = "批处理" + arr.length;
            var butcaption = document.getElementById("butpcl");
            butcaption.innerText = strx;
        }
    }
    

    function Export2Excel() {
        var q = $("#wheresql").val();
        if (q == "" || undefined || null) {
            q = " where 1=2";
        }
        q = 'select * from V预算统计 ' + q;
        q = escape(q);
        var s = "../Main/Export2Excel?w=" + q;
        window.location = s;
    }

    document.getElementById("worktable").style.height = document.body.clientHeight + "px";
</script>



